<p id="notice"><%= notice %></p>

<h1>Custodians</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Specialty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custodians.each do |custodian| %>
      <tr>
        <td><%= custodian.name %></td>
        <td><%= custodian.specialty %></td>
        <td><%= link_to 'Show', custodian %></td>
        <td><%= link_to 'Edit', edit_custodian_path(custodian) %></td>
        <td><%= link_to 'Destroy', custodian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

